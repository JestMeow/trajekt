{
	"format_version": "1.16.0",
	"animation_controllers": {
		"controller.animation.player.attack_time": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attacking": "variable.attack_time"
						}
					],
					"on_entry": [
						"/tag @s remove \";attack_time\""
					]
				},
				"attacking": {
					"transitions": [
						{
							"default": "!variable.attack_time"
						}
					],
					"on_entry": [
						"/tag @s add \";attack_time\""
					]
				}
			}
		}
	}
}