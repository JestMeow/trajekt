                "textures": {
                    "Array.skins": [
                        "Texture.default",
                        "Texture.invisible"
                    ]
                }
            },
            "geometry": "geometry.default",
            "part_visibility": [
                {
                    "*": true
                },
                {
                    "baseplate": "!query.is_sheared"
                },
                {
                    "leftarm": "!query.is_saddled"
                },
                {
                    "rightarm": "!query.is_saddled"
                }
            ],
            "materials": [
                {
                    "*": "Material.default"
                }
            ],
            "textures": [
                "Array.skins[query.variant]"
            ],
            "overlay_color": {
                "r": "this",
                "g": "this",
                "b": "this",
                "a": "0.0"
            }
        }
    }
}